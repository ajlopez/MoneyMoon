<% var title = 'Préstamos' %>
<% include header %>
    <h1>Préstamos</h1>
    <div class='row'>
        <table class='table'>
            <thead>
                <tr>
                    <th></th>
                    <th>Código</th>
                    <th>Usuario</th>
                    <th style='text-align: right'>Monto</th>
                    <th>Fecha/Hora Creación</th>
                    <th>Estado</th>
                    <th>Fecha/Hora Estado</th>
                </tr>
            </thead>
            <tbody>
<% loans.forEach(function (loan) { %>
                <tr>
                    <td><a href="/admin/loan/<%= loan.id %>">Ver</a></td>
                    <td><%= loan.code %></td>
                    <td><a href="/admin/user/<%= loan.user %>"><%= loan.userDescription %></a></td>
                    <td style='text-align: right'><%= loan.amount.toFixed(2) %></td>
                    <td><%= loan.created %></td>
                    <td><%= loan.statusDescription %></td>
                </tr>
<% }); %>
            </tbody>
        </table>
    </div>
<% include footer %>
